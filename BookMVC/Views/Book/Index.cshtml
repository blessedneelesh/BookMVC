@model List<Mmabook>;
<!DOCTYPE html>
<html>
<head>
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>
</head>
<body>
    <a asp-action="Insert">Insert New Book</a>
<h2>Books Table</h2>

<table>
  <tr>
    <th>Product Code</th>
    <th>Name</th>
    <th>Price</th>
    <th>Action</th>
  </tr>
        @if (TempData.Keys.Contains("message"))
        {
            <h4 class="bg-info text-center text-white p-2">
                @TempData["message"]
            </h4>
        }
        @foreach(var book in @Model)
        {
            <tr>
                <td>@book.ProductCode</td>
                <td>@book.Description</td>
                <td>@book.UnitPrice</td>
                <td><a asp-controller="Book" asp-action="Edit" asp-route-id="@book.ProductCode">Edit</a></td>
                <td><a asp-controller="Book" asp-action="Delete" asp-route-id="@book.ProductCode">Delete</a></td>
            </tr>
        }
       
</table>

</body>
</html>